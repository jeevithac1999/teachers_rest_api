<div class="container">
  <h1>Teacher Details</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Age</th>
        <th scope="col">Gender</th>
        <th scope="col">Course</th>
        <th scope="col">Salary</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each teachers}}
      <tr>
        <th scope="row">{{formatIndex @index}}</th>
        <td>{{this.firstname}}</td>
        <td>{{this.lastname}}</td>
        <td>{{this.age}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.courses.course1}}</td>
        <td>{{this.salary}}</td>
        <td><a href="#">Edit</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>